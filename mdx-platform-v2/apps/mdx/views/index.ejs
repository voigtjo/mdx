  <script src="https://unpkg.com/htmx.org@1.9.10"></script>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">
  <div class="max-w-5xl mx-auto py-10">
    <header class="flex items-center justify-between mb-8">
      <div>
        <h1 class="text-2xl font-bold">MDX Forms</h1>
        <p class="text-sm text-gray-500">
          Eingeloggt als <span class="font-mono"><%= user.email %></span>
        </p>
      </div>
      <nav class="space-x-4 text-sm">
        <a href="/dashboard" class="text-gray-600 hover:underline">Dashboard</a>
        <a href="/users" class="text-gray-600 hover:underline">Users</a>
        <a href="/tenants" class="text-gray-600 hover:underline">Tenants</a>
        <a href="/logout" class="text-red-600 hover:underline">Logout</a>
      </nav>
    </header>

    <section class="bg-white rounded-xl shadow p-6 mb-6 flex items-center justify-between">
      <div>
        <h2 class="text-lg font-semibold mb-1">MDX-Formulare</h2>
        <p class="text-sm text-gray-500">
          <%= docs.length %> Formular(e) fÃ¼r deinen Tenant.
        </p>
      </div>
      <a
        href="/mdx/edit"
        class="inline-flex items-center px-4 py-2 rounded-lg bg-blue-600 text-white text-sm font-medium hover:bg-blue-700"
      >
        Neues Formular
      </a>
    </section>

    <% if (docs.length === 0) { %>
      <p class="text-sm text-gray-500">
        Noch keine MDX-Formulare vorhanden. Lege das erste Formular an ðŸ‘‡
      </p>
    <% } else { %>
      <div class="space-y-4">
        <% docs.forEach(function(doc) { %>
          <article class="bg-white rounded-xl shadow p-5 flex items-center justify-between">
            <div>
              <h3 class="font-semibold"><%= doc.title || "(ohne Titel)" %></h3>
              <p class="text-xs text-gray-500"><%= doc.slug %></p>
            </div>
            <div class="space-x-2 text-sm">
              <a
                href="/mdx/forms/<%= encodeURIComponent(doc.slug) %>"
                class="inline-flex items-center px-3 py-1.5 rounded border border-gray-300 text-gray-700 hover:bg-gray-50"
              >
                Formular anzeigen
              </a>
              <a
                href="/mdx/edit/<%= encodeURIComponent(doc.slug) %>"
                class="inline-flex items-center px-3 py-1.5 rounded border border-blue-600 text-blue-600 hover:bg-blue-50"
              >
                Bearbeiten
              </a>
              <a
                href="/mdx/forms/<%= encodeURIComponent(doc.slug) %>/submissions"
                class="inline-flex items-center px-3 py-1.5 rounded border border-gray-300 text-gray-700 hover:bg-gray-50"
              >
                EingÃ¤nge
              </a>
            </div>
          </article>
        <% }); %>
      </div>
    <% } %>
  </div>
</body>
