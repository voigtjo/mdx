<div class="max-w-6xl mx-auto py-10">
  <div class="mb-6">
    <h1 class="text-2xl font-semibold text-gray-900">Groups</h1>
    <p class="text-sm text-gray-600 mt-1">Tenant-scoped Gruppen für Rollen-/Rechtezuweisungen.</p>
  </div>

  <% if (error) { %>
    <div class="mb-6 p-4 rounded-lg border border-red-200 bg-red-50 text-sm text-red-800">
      <div class="font-semibold">Fehler</div>
      <div><%= error %></div>
    </div>
  <% } %>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Create -->
    <section class="bg-white rounded-xl shadow p-6">
      <h2 class="text-lg font-semibold mb-4">Neue Gruppe</h2>
      <form method="POST" action="/tenant/<%= encodeURIComponent(tenantId) %>/groups">
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Name *</label>
            <input name="name" required class="w-full rounded-lg border-gray-300" placeholder="z.B. Sales, Ops, Approver" />
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Beschreibung</label>
            <textarea name="description" class="w-full rounded-lg border-gray-300" rows="3" placeholder="optional"></textarea>
          </div>
          <button class="w-full px-4 py-2 rounded-lg bg-blue-600 text-white text-sm font-medium hover:bg-blue-700">
            Gruppe anlegen
          </button>
        </div>
      </form>
    </section>

    <!-- List -->
    <section class="lg:col-span-2 bg-white rounded-xl shadow p-6">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-lg font-semibold">Gruppen</h2>
        <span class="text-sm text-gray-500"><%= (groups || []).length %> Eintrag(e)</span>
      </div>

      <% if (!groups || groups.length === 0) { %>
        <p class="text-sm text-gray-600">Noch keine Gruppen vorhanden.</p>
      <% } else { %>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
          <% groups.forEach(g => { %>
            <a href="/tenant/<%= encodeURIComponent(tenantId) %>/groups/<%= encodeURIComponent(String(g._id)) %>"
               class="block border rounded-lg p-4 hover:bg-gray-50 <%= selectedGroup && String(selectedGroup._id) === String(g._id) ? 'border-blue-300 bg-blue-50' : 'border-gray-200' %>">
              <div class="font-semibold text-gray-900"><%= g.name %></div>
              <div class="text-xs text-gray-500 mt-1"><%= g.description || "" %></div>
            </a>
          <% }) %>
        </div>
      <% } %>

      <% if (selectedGroup) { %>
        <div class="mt-8 border-t pt-6">
          <div class="flex items-center justify-between">
            <div>
              <h3 class="text-lg font-semibold"><%= selectedGroup.name %></h3>
              <p class="text-sm text-gray-600"><%= selectedGroup.description || "" %></p>
            </div>

            <form method="POST" action="/tenant/<%= encodeURIComponent(tenantId) %>/groups/<%= encodeURIComponent(String(selectedGroup._id)) %>/delete"
                  onsubmit="return confirm('Gruppe wirklich löschen? (Mitgliedschaften werden entfernt)');">
              <button class="px-3 py-2 rounded-lg bg-red-600 text-white text-sm hover:bg-red-700">Löschen</button>
            </form>
          </div>

          <div class="mt-6 grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="bg-gray-50 border rounded-lg p-4">
              <h4 class="font-semibold mb-3">Mitglied hinzufügen</h4>
              <form method="POST" action="/tenant/<%= encodeURIComponent(tenantId) %>/groups/<%= encodeURIComponent(String(selectedGroup._id)) %>/members">
                <div class="flex gap-2">
                  <input name="email" required class="flex-1 rounded-lg border-gray-300" placeholder="user@example.com" />
                  <button class="px-3 py-2 rounded-lg bg-blue-600 text-white text-sm hover:bg-blue-700">Add</button>
                </div>
                <p class="text-xs text-gray-500 mt-2">MVP: Zuordnung per E-Mail (später per UserId).</p>
              </form>
            </div>

            <div>
              <h4 class="font-semibold mb-3">Mitglieder</h4>
              <% if (!members || members.length === 0) { %>
                <p class="text-sm text-gray-600">Keine Mitglieder.</p>
              <% } else { %>
                <div class="space-y-2">
                  <% members.forEach(m => { %>
                    <div class="flex items-center justify-between border rounded-lg p-3">
                      <div class="text-sm">
                        <div class="font-mono text-gray-900"><%= m.email || (m.userId ? String(m.userId) : "") %></div>
                        <div class="text-xs text-gray-500"><%= m.createdAt ? new Date(m.createdAt).toLocaleString() : "" %></div>
                      </div>
                      <form method="POST"
                            action="/tenant/<%= encodeURIComponent(tenantId) %>/groups/<%= encodeURIComponent(String(selectedGroup._id)) %>/members/<%= encodeURIComponent(String(m._id)) %>/delete">
                        <button class="px-3 py-2 rounded-lg bg-white border text-sm hover:bg-gray-50">Remove</button>
                      </form>
                    </div>
                  <% }) %>
                </div>
              <% } %>
            </div>
          </div>
        </div>
      <% } %>
    </section>
  </div>
</div>
