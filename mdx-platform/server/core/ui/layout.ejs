<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title><%= (typeof title !== "undefined" && title) ? title : "MDX Platform" %></title>

  <script src="https://unpkg.com/htmx.org@1.9.10"></script>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100">
  <div class="max-w-6xl mx-auto py-10 px-4">
    <% if (typeof user !== "undefined" && user) { %>
      <header class="mb-8">
        <%- include("partials/topnav.ejs", {
          title: (typeof title !== "undefined" && title) ? title : "MDX Platform",
          user,
          tenantId: (typeof tenantId !== "undefined" ? tenantId : null),
          enabledApps: (typeof enabledApps !== "undefined" ? enabledApps : []),
          currentApp: (typeof currentApp !== "undefined" ? currentApp : null)
        }) %>
      </header>
    <% } %>

    <main>
      <%- body %>
    </main>
  </div>
</body>
</html>
